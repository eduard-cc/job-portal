@page "/change-password"
@using Microsoft.AspNetCore.Authorization;
@model JobPortalWeb.Pages.UserSettings.ChangeUserPasswordModel
@attribute [Authorize]
@{
    ViewData["Title"] = "Change password";
}

<div class="user-container">
    <div class="profile-details-card">
        <h2>Change your password</h2>
        <form method="post">
            <strong><label asp-for="NewPassword"></label></strong>
            <p class="validation-error"><span asp-validation-for="NewPassword"></span></p>
            <p class="validation-error">@Html.ValidationMessage("PasswordsDontMatch")</p>
            <input asp-for="NewPassword" type="password" />

            <strong><label asp-for="ConfirmNewPassword"></label></strong>
            <p class="validation-error"><span asp-validation-for="ConfirmNewPassword"></span></p>
            <p class="validation-error">@Html.ValidationMessage("PasswordsDontMatch")</p>
            <input asp-for="ConfirmNewPassword" type="password" />

            <strong><label asp-for="CurrentPassword"></label></strong>
            <p class="validation-error"><span asp-validation-for="CurrentPassword"></span></p>
            <p class="validation-error">@Html.ValidationMessage("IncorrectPassword")</p>
            <input asp-for="CurrentPassword" type="password" />

            <button class="save-details-button" type="submit">Confirm</button>
        </form>
    </div>
</div>

<script src="~/lib/jquery/jquery.js" asp-append-version="true"></script>
<script src="~/lib/jquery-validate/jquery.validate.js" asp-append-version="true"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
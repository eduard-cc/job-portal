                    <input asp-for="Upload" type="file">
                    <p style="font-size:0.8rem;">DOC, DOCX, PDF (2MB)</p>
                    <span asp-validation-for="Upload" class="validation-error"></span>
                    <input type="hidden" name="JobId" value="@Model.JobId" />

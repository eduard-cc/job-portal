                        </div>
                    }
                    else if (Model.ApplicationAlreadyMade.Status == ApplicationStatus.Accepted)
                    {
                        <div class="application-status" style="background-color:#86EFAC">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z" />
                            </svg>
                            <p>@Model.ApplicationAlreadyMade.Status</p>
                        </div>
                    }
                    else if (Model.ApplicationAlreadyMade.Status == ApplicationStatus.Rejected)
                    {
                        <div class="application-status" style="background-color:#FCA5A5">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">

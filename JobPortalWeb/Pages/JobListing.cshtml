                            </svg>
                            <p>@Model.ApplicationAlreadyMade.Status</p>
                        </div>
                    }
                </p>
            }
            else
            {
                <form asp-page-handler="Apply" method="post" enctype="multipart/form-data">
                    <strong>
                        <label asp-for="Upload">

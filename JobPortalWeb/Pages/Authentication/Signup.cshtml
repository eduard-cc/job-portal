@page "/signup"
@using JobPortalDomain.Enums;
@using JobPortalDomain.Models;
@model JobPortalWeb.Pages.Authentication.SignupModel
@{
    ViewData["Title"] = "Sign up";
}

<div class="auth-container">
    <div class="signup-form">
        <h1><strong>Sign up</strong></h1>
        <form id="userAccountSetupForm" method="post">
            <section id="step-1" class="form-step">
                <label><strong>Choose your account type</strong></label>
                <div class="options" id="account-type-selector">
                    <input asp-for="AccountType" value="Jobseeker" type="radio" name="AccountType" id="jobseeker-option" />
                    <label id="jobseeker-button" for="jobseeker-option">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-vcard-fill" viewBox="0 0 16 16">
                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm9 1.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4a.5.5 0 0 0-.5.5ZM9 8a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4A.5.5 0 0 0 9 8Zm1 2.5a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 0-1h-3a.5.5 0 0 0-.5.5Zm-1 2C9 10.567 7.21 9 5 9c-2.086 0-3.8 1.398-3.984 3.181A1 1 0 0 0 2 13h6.96c.026-.163.04-.33.04-.5ZM7 6a2 2 0 1 0-4 0 2 2 0 0 0 4 0Z" />
                        </svg>
                        Jobseeker
                        <svg id="tick-jobseeker" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                    </label>
                    <input asp-for="AccountType" value="Employer" type="radio" name="AccountType" id="employer-option" />
                    <label id="employer-button" for="employer-option">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-briefcase-fill" viewBox="0 0 16 16">
                            <path d="M6.5 1A1.5 1.5 0 0 0 5 2.5V3H1.5A1.5 1.5 0 0 0 0 4.5v1.384l7.614 2.03a1.5 1.5 0 0 0 .772 0L16 5.884V4.5A1.5 1.5 0 0 0 14.5 3H11v-.5A1.5 1.5 0 0 0 9.5 1h-3zm0 1h3a.5.5 0 0 1 .5.5V3H6v-.5a.5.5 0 0 1 .5-.5z" />
                            <path d="M0 12.5A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5V6.85L8.129 8.947a.5.5 0 0 1-.258 0L0 6.85v5.65z" />
                        </svg>
                        Employer
                        <svg id="tick-employer" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                    </label>
                </div>
                <div id="jobseeker-bullet">
                    <label><strong>As a Jobseeker you can:</strong></label>
                    <ul class="acctype-details">
                        <li>Explore job openings</li>
                        <li>Upload your CV</li>
                        <li>Apply to jobs in just a few clicks</li>
                    </ul>
                </div>
                <div id="employer-bullet">
                    <label><strong>As an Employer you can:</strong></label>
                    <ul class="acctype-details">
                        <li>Post job listings</li>
                        <li>Find the perfect candidate</li>
                        <li>Manage applications all in one place</li>
                    </ul>
                </div>
                <div class="form-navigation">
                    <button class="form-navigation-button continue-button" type="button" step_number="2">Continue</button>
                </div>
            </section>
            <section id="step-2" class="form-step d-none">
                <strong><label asp-for="User.Email"></label></strong>
                <p class="validation-error"><span asp-validation-for="User.Email"></span></p>
                <p class="validation-error">@Html.ValidationMessage("EmailInUseError")</p>
                <input asp-for="User.Email" type="email">
                <strong><label asp-for="User.Password"></label></strong>
                <p class="validation-error"><span asp-validation-for="User.Password"></span></p>
                <div class="password-field">
                    <input asp-for="User.Password" type="password" id="password-input" class="hidden-pass-input" />
                    <button type="button" id="pass-eye-button">
                        <svg id="svg-show" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                            <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                            <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" />
                        </svg>
                        <svg id="svg-hide" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                            <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z" />
                            <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.83-2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z" />
                        </svg>
                    </button>
                </div>
                <div class="form-navigation">
                    <button class="form-navigation-button back-button" type="button" step_number="1">Back</button>
                    <button class="form-navigation-button continue-button" type="button" step_number="3">Continue</button>
                </div>
            </section>
            <section id="step-3" class="form-step d-none">
                <div id="jobseeker-acc-info-form">
                    <strong><label asp-for="Jobseeker.FirstName"></label></strong>
                    <p class="validation-error"><span asp-validation-for="Jobseeker.FirstName"></span></p>
                    <input asp-for="Jobseeker.FirstName" type="text">
                    <strong><label asp-for="Jobseeker.LastName"></label></strong>
                    <p class="validation-error"><span asp-validation-for="Jobseeker.LastName"></span></p>
                    <input asp-for="Jobseeker.LastName" type="text">
                    <strong><label asp-for="Jobseeker.PhoneNumber"></label></strong>
                    <p class="validation-error"><span asp-validation-for="Jobseeker.PhoneNumber"></span></p>
                    <input asp-for="Jobseeker.PhoneNumber" placeholder="0612345678" type="tel">
                    <strong><label asp-for="Jobseeker.Location"></label></strong>
                    <p class="validation-error"><span asp-validation-for="Jobseeker.Location"></span></p>
                    <input asp-for="Jobseeker.Location" placeholder="Eindhoven, Netherlands" type="text">
                </div>
                <div id="employer-acc-info-form">
                    <strong><label asp-for="Employer.CompanyName"></label></strong>
                    <p class="validation-error"><span asp-validation-for="Employer.CompanyName"></span></p>
                    <input asp-for="Employer.CompanyName" type="text">
                    <strong><label asp-for="Employer.CompanySize"></label></strong>
                    <p class="validation-error"><span asp-validation-for="Employer.CompanySize"></span></p>
                    <select asp-for="Employer.CompanySize" asp-items="Html.GetEnumSelectList<CompanySize>()"></select>
                    <strong><label asp-for="Employer.Location"></label></strong>
                    <p class="validation-error"><span asp-validation-for="Employer.Location"></span></p>
                    <input asp-for="Employer.Location" placeholder="Eindhoven, Netherlands" type="text">
                </div>
                <div class="form-navigation">
                    <button class="form-navigation-button back-button" type="button" step_number="2">Back</button>
                    <button class="form-navigation-button continue-button submit-btn" type="submit">Create account</button>
                </div>
            </section>
        </form>
        <ul class="form-stepper">
            <li class="form-stepper-square form-stepper-active form-stepper-list" step="1"></li>
            <li class="form-stepper-square form-stepper-unfinished form-stepper-list" step="2"></li>
            <li class="form-stepper-square form-stepper-unfinished form-stepper-list" step="3"></li>
        </ul>
        <p class="auth-link">Already have an account? <a asp-area="" asp-page="/Authentication/Login">Log in</a></p>
    </div>
</div>

<script src="~/lib/jquery/jquery.js" asp-append-version="true"></script>
<script src="~/lib/jquery-validate/jquery.validate.js" asp-append-version="true"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
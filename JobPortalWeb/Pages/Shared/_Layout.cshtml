<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Job Portal</title>
    <link rel="stylesheet" href="~/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="nav-links-left">
                <a id="logo-link" asp-page="/Index"><img class="logo" src="/logo.svg" alt="logo" /></a>

                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-page="/Index" class="@(ViewData["Title"] == "Find jobs" ? "current-page" : "")">Find jobs</a>
                    <a asp-page="/Authentication/Login" class="@(ViewData["Title"] == "Post a job" ? "current-page" : "")">Post a job</a>
                }
                else
                {
                    @if (User.IsInRole("Jobseeker"))
                    {
                        <a asp-page="/Index" class="@(ViewData["Title"] == "Find jobs" ? "current-page" : "")">Find jobs</a>
                    }
                    else
                    {
                        <a asp-page="/EmployerDashboard/PostJob" class="@(ViewData["Title"] == "Post a job" ? "current-page" : "")">Post a job</a>
                    }
                }
            </div>
            <div class="nav-links-right">
                <a id="hamburger-menu">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-list inline-icon" viewBox="0 0 16 16" style="top:0.6rem;">
                        <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
                    </svg>
                </a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-page="/Authentication/Login" class="@(ViewData["Title"] == "Log in" ? "current-page" : "")">Log in</a>
                    <a asp-page="/Authentication/Signup" id="sign-up-button" class="@(ViewData["Title"] == "Sign up" ? "current-page" : "")">Sign up</a>
                }
                else
                {
                    @if (User.IsInRole("Jobseeker"))
                    {
                        <a asp-page="/JobseekerDashboard/JobseekerAppliedJobs" class="@(ViewData["Title"] == "Applied jobs" ? "current-page" : "")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard-check-fill inline-icon" viewBox="0 0 16 16">
                                <path d="M6.5 0A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3Zm3 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3Z" />
                                <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1A2.5 2.5 0 0 1 9.5 5h-3A2.5 2.5 0 0 1 4 2.5v-1Zm6.854 7.354-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708.708Z" />
                            </svg>
                            Applied jobs
                        </a>
                        <a asp-page="/JobseekerDashboard/JobseekerSavedJobs" class="@(ViewData["Title"] == "Saved jobs" ? "current-page" : "")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmarks-fill inline-icon" viewBox="0 0 16 16">
                                <path d="M2 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v11.5a.5.5 0 0 1-.777.416L7 13.101l-4.223 2.815A.5.5 0 0 1 2 15.5V4z" />
                                <path d="M4.268 1A2 2 0 0 1 6 0h6a2 2 0 0 1 2 2v11.5a.5.5 0 0 1-.777.416L13 13.768V2a1 1 0 0 0-1-1H4.268z" />
                            </svg>
                            Saved jobs
                        </a>
                    }
                    else
                    {
                        <a asp-page="/EmployerDashboard/EmployerJobs" class="@(ViewData["Title"] == "Jobs" ? "current-page" : "")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-briefcase-fill inline-icon" viewBox="0 0 16 16">
                              <path d="M6.5 1A1.5 1.5 0 0 0 5 2.5V3H1.5A1.5 1.5 0 0 0 0 4.5v1.384l7.614 2.03a1.5 1.5 0 0 0 .772 0L16 5.884V4.5A1.5 1.5 0 0 0 14.5 3H11v-.5A1.5 1.5 0 0 0 9.5 1h-3zm0 1h3a.5.5 0 0 1 .5.5V3H6v-.5a.5.5 0 0 1 .5-.5z"/>
                              <path d="M0 12.5A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5V6.85L8.129 8.947a.5.5 0 0 1-.258 0L0 6.85v5.65z"/>
                            </svg>
                            Jobs
                        </a>
                    }
                    <a id="nav-profile-toggle">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-circle inline-icon" viewBox="0 0 16 16" style="top:0.6rem">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                        </svg>
                    </a>
                    <div class="profile-menu">
                        <a asp-page="/UserSettings/UserAccountSettings" class="@(ViewData["Title"] == "Profile" ? "current-page" : "")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-text-fill inline-icon" viewBox="0 0 16 16">
                                <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM4.5 9a.5.5 0 0 1 0-1h7a.5.5 0 0 1 0 1h-7zM4 10.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 1 0-1h4a.5.5 0 0 1 0 1h-4z" />
                            </svg>
                            Profile
                        </a>
                        <a asp-page="/Authentication/Logout" asp-page-handler="post">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right inline-icon" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                                <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                            </svg>
                            Log out
                        </a>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="hamburger-menu-container">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-page="/Index" class="@(ViewData["Title"] == "Find jobs" ? "current-page" : "")">Find jobs</a>
            <a asp-page="/Authentication/Login" class="@(ViewData["Title"] == "Log in" ? "current-page" : "")">Log in</a>
            <a asp-page="/Authentication/Signup" id="sign-up-button" class="@(ViewData["Title"] == "Sign up" ? "current-page" : "")">Sign up</a>
        }
        else
        {
            @if (User.IsInRole("Jobseeker"))
            {
                <a asp-page="/Index" class="@(ViewData["Title"] == "Find jobs" ? "current-page" : "")">Find jobs</a>
                <a asp-page="/JobseekerDashboard/JobseekerAppliedJobs" class="@(ViewData["Title"] == "Applied jobs" ? "current-page" : "")">Applied jobs</a>
                <a asp-page="/JobseekerDashboard/JobseekerSavedJobs" class="@(ViewData["Title"] == "Saved jobs" ? "current-page" : "")">Saved jobs</a>
            }
            else
            {
                <a asp-page="/EmployerDashboard/PostJob" class="@(ViewData["Title"] == "Post a job" ? "current-page" : "")">Post a job</a>
                <a asp-page="/EmployerDashboard/EmployerJobs" class="@(ViewData["Title"] == "Jobs" ? "current-page" : "")">Jobs</a>
            }
            <a asp-page="/UserSettings/UserAccountSettings" class="@(ViewData["Title"] == "Profile" ? "current-page" : "")">Profile</a>
            <a asp-page="/Authentication/Logout" asp-page-handler="post">Log out</a>
        }
    </div>
    <main>
        @RenderBody()
    </main>
    <footer>
        <nav>
            <div class="nav-links-left">
                <a asp-page="/Index">&copy; 2023 Job Portal</a>
            </div>
            <div class="nav-links-right">
                <a asp-page="/PrivacyAndTerms/Terms" class="@(ViewData["Title"] == "Terms of service" ? "current-page" : "")">Terms of service</a>
                <a asp-page="/PrivacyAndTerms/Privacy" class="@(ViewData["Title"] == "Privacy policy" ? "current-page" : "")">Privacy policy</a>
            </div>
        </nav>
    </footer>
    <script src="~/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>